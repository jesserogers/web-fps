/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@kuroi/components": [
        "components/public.ts"
      ],
      "@kuroi/components/*": [
        "components/*/public.ts"
      ],
      "@kuroi/core": [
        "core/public.ts"
      ],
      "@kuroi/core/*": [
        "core/*/public.ts"
      ],
      "@kuroi/views": [
        "views/public.ts"
      ],
      "@kuroi/views/*": [
        "views/*/public.ts"
      ]
    }
  }
}
