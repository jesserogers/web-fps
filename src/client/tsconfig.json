/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "../../dist/out-tsc",
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@kuroi/components": [
        "components/public.ts"
      ],
      "@kuroi/components/*": [
        "components/*"
      ],
      "@kuroi/core": [
        "core/"
      ],
      "@kuroi/core/*": [
        "core/*"
      ],
      "@kuroi/views": [
        "views/"
      ],
      "@kuroi/views/*": [
        "views/*"
      ],
      "@kuroi/game-objects": [
        "game-objects/"
      ],
      "@kuroi/game-objects/*": [
        "game-objects/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./**/*.spec.ts",
    "./**/test.ts"
  ],
  "references": [
    {
      "path": "../common"
    }
  ]
}
